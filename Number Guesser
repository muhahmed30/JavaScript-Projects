const compareGuesses = (humanGuess, computerGuess, targetGuess) => {
  humanDifference= Math.abs(targetGuess-humanGuess);
  computerGuess= Math.abs(targetGuess-computerGuess); 

  if (humanDifference<=computerGuess)
    return true; 
  else
    return false; 
}

const updateScore= winner =>{
  if (winner === 'human')
    humanScore++; 
  else 
    computerScore++; 
} 

